<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.ibm.tap.sigbank.software.Software" table="SOFTWARE"
		lazy="true">

		<id name="softwareId" type="long" column="SOFTWARE_ID">
			<generator class="increment" />
		</id>

		<many-to-one name="manufacturer" column="MANUFACTURER_ID"
			class="com.ibm.tap.sigbank.manufacturer.Manufacturer" not-null="true" />

		<many-to-one name="softwareCategory" column="SOFTWARE_CATEGORY_ID"
			class="com.ibm.tap.sigbank.softwarecategory.SoftwareCategory"
			not-null="true" />

		<property name="softwareName" column="SOFTWARE_NAME" length="128"
			not-null="true" unique="true" />

		<property name="priority" column="PRIORITY" type="integer"
			not-null="true" />

		<property name="level" column="LEVEL" length="32" not-null="true" />

		<property name="type" column="TYPE" length="4" not-null="true" />

		<property name="vendorManaged" column="VENDOR_MANAGED" type="boolean"
			not-null="true" />

		<property name="changeJustification" column="CHANGE_JUSTIFICATION"
			length="128" not-null="true" />

		<property name="comments" column="COMMENTS" length="255" />

		<property name="remoteUser" column="REMOTE_USER" length="32"
			not-null="true" />

		<property name="recordTime" column="RECORD_TIME" type="timestamp"
			not-null="true" />

		<property name="status" column="STATUS" length="32" not-null="true" />

	</class>
</hibernate-mapping>