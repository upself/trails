<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<query name="manufacturers">
		<![CDATA[
		FROM Manufacturer
		ORDER BY manufacturerName
		]]>
	</query>

	<query name="manufacturerByName">
		<![CDATA[
		from 
			Manufacturer m
		where
		    m.manufacturerName = :name
		]]>
	</query>

	<query name="manufacturerById">
		<![CDATA[
		from Manufacturer m

		where m.manufacturerId = :manufacturerId

		]]>
	</query>


	<query name="softwaresByManufacturer">
		<![CDATA[
		from  Software s

		join fetch s.manufacturer

		where 
			s.manufacturer = :manufacturer  and
			s.status = 'ACTIVE'

		order by
			upper(s.softwareName)

		]]>
	</query>

</hibernate-mapping>