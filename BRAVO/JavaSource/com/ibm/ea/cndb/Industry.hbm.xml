<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ibm.ea.cndb.Industry" table="INDUSTRY" lazy="true" mutable="false">
    
        <id name="industryId" type="long" column="INDUSTRY_ID">
            <generator class="increment"/>
        </id>
        
        <many-to-one name="sector" column="SECTOR_ID" class="com.ibm.ea.cndb.Sector" not-null="true" index="IDX_INDS"/>
        
<!--        <property name="industryName" column="INDUSTRY_NAME" not-null="true" index="IDX_INDN"/>-->
        <property name="industryName" column="INDUSTRY_NAME" not-null="true"/>

    </class>
</hibernate-mapping>

