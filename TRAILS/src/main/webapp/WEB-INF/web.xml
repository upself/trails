<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>TRAILS</display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:applicationContext*.xml</param-value>
	</context-param>

	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>${app.root.name}</param-value>
	</context-param>

	<listener>
		<listener-class>com.ibm.tap.trails.framework.TrailsInitListener</listener-class>
	</listener>

	<filter>
		<filter-name>ResponseOverrideFilter</filter-name>
		<filter-class>org.displaytag.filter.ResponseOverrideFilter</filter-class>
	</filter>
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ResponseOverrideFilter</filter-name>
		<url-pattern>*.htm</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ResponseOverrideFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.htm</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<!-- Servlets -->
	<servlet>
		<servlet-name>dwr</servlet-name>
		<servlet-class>uk.ltd.getahead.dwr.DWRServlet</servlet-class>
		<init-param>
			<param-name>debug</param-name>
			<param-value>true</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>jspSupportServlet</servlet-name>
		<servlet-class>org.apache.struts2.views.JspSupportServlet</servlet-class>
		<load-on-startup>5</load-on-startup>
	</servlet>
	<servlet>
		<display-name>ReportDownload</display-name>
		<servlet-name>ReportDownload</servlet-name>
		<servlet-class>com.ibm.asset.trails.form.ReportDownload</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>dwr</servlet-name>
		<url-pattern>/dwr/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ReportDownload</servlet-name>
		<url-pattern>/report/download/*</url-pattern>
	</servlet-mapping>

	<!-- CXF Servlet -->
	<servlet>
		<servlet-name>CXFServlet</servlet-name>
		<servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CXFServlet</servlet-name>
		<url-pattern>/ws/*</url-pattern>
	</servlet-mapping>

	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
		<error-code>403</error-code>
		<location>/error/403.jsp</location>
	</error-page>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>ReportProtection</web-resource-name>
			<url-pattern>/account/trailsreports/*</url-pattern>
			<url-pattern>/report/*</url-pattern>
			<url-pattern>/reports/*</url-pattern>
			<url-pattern>/ws/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>com.ibm.tap.admin</role-name>
			<role-name>com.ibm.tap.asset</role-name>
			<role-name>com.ibm.ea.asset.secure.michelin</role-name>
			<role-name>com.ibm.tap.asset.ap</role-name>
			<role-name>com.ibm.tap.asset.emea</role-name>
			<role-name>com.ibm.tap.asset.group</role-name>
			<role-name>com.ibm.tap.asset.helpdesk</role-name>
			<role-name>com.ibm.tap.asset.la</role-name>
			<role-name>com.ibm.tap.bravo.user</role-name>
			<role-name>com.ibm.tap.bravo.user.division</role-name>
			<role-name>com.ibm.tap.bravo.user.emea.dpe</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>SecretProtection</web-resource-name>
			<url-pattern>/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>com.ibm.tap.admin</role-name>
			<role-name>com.ibm.tap.asset</role-name>
			<role-name>com.ibm.ea.asset.secure.michelin</role-name>
			<role-name>com.ibm.tap.asset.ap</role-name>
			<role-name>com.ibm.tap.asset.emea</role-name>
			<role-name>com.ibm.tap.asset.group</role-name>
			<role-name>com.ibm.tap.asset.helpdesk</role-name>
			<role-name>com.ibm.tap.asset.la</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<login-config>
		<auth-method>BASIC</auth-method>
		<realm-name>Default</realm-name>
	</login-config>
	<security-role>
		<description>com.ibm.tap.admin</description>
		<role-name>com.ibm.tap.admin</role-name>
	</security-role>
	<security-role>
		<description>com.ibm.tap.asset</description>
		<role-name>com.ibm.tap.asset</role-name>
	</security-role>
	<security-role>
		<description>com.ibm.ea.asset.secure.michelin</description>
		<role-name>com.ibm.ea.asset.secure.michelin</role-name>
	</security-role>
	<security-role>
		<description>com.ibm.tap.asset.ap</description>
		<role-name>com.ibm.tap.asset.ap</role-name>
	</security-role>
	<security-role>
		<description>com.ibm.tap.asset.emea</description>
		<role-name>com.ibm.tap.asset.emea</role-name>
	</security-role>
	<security-role>
		<description>com.ibm.tap.asset.group</description>
		<role-name>com.ibm.tap.asset.group</role-name>
	</security-role>
	<security-role>
		<description>com.ibm.tap.asset.helpdesk</description>
		<role-name>com.ibm.tap.asset.helpdesk</role-name>
	</security-role>
	<security-role>
		<description>com.ibm.tap.asset.la</description>
		<role-name>com.ibm.tap.asset.la</role-name>
	</security-role>
	<security-role>
		<description>com.ibm.tap.bravo.user</description>
		<role-name>com.ibm.tap.bravo.user</role-name>
	</security-role>
	<security-role>
		<description>com.ibm.tap.bravo.user.division</description>
		<role-name>com.ibm.tap.bravo.user.division</role-name>
	</security-role>
	<security-role>
		<description>com.ibm.tap.bravo.user.emea.dpe</description>
		<role-name>com.ibm.tap.bravo.user.emea.dpe</role-name>
	</security-role>
</web-app>
