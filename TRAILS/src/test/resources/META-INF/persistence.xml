<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="trailspd" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.ibm.asset.trails.domain.Reconcile</class> 
		<properties>
			<property name="hibernate.temp.use_jdbc_metadata_defaults"
				value="false" />
			<property name="hibernate.jdbc.use_scrollable_resultset"
				value="true" />
			<property name="hibernate.cache.use_second_level_cache"
				value="true" />
			<property name="hibernate.cache.use_query_cache" value="true" />
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.EhCacheProvider" />
			<property name="hibernate.default_schema" value="eaadmin" />
			<property name="hibernate.c3p0.min_size" value="10" />
			<property name="hibernate.c3p0.max_size" value="100" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.c3p0.acquire_increment" value="5" />
			<property name="hibernate.c3p0.idle_test_period" value="300" />
		</properties>
	</persistence-unit>
	<persistence-unit name="trailsst" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<properties>
			<property name="hibernate.temp.use_jdbc_metadata_defaults"
				value="false" />
			<property name="hibernate.jdbc.use_scrollable_resultset"
				value="true" />
			<property name="hibernate.cache.use_second_level_cache"
				value="true" />
			<property name="hibernate.cache.use_query_cache" value="true" />
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.EhCacheProvider" />
			<property name="hibernate.default_schema" value="eaadmin" />
			<property name="hibernate.c3p0.min_size" value="10" />
			<property name="hibernate.c3p0.max_size" value="100" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.c3p0.acquire_increment" value="5" />
			<property name="hibernate.c3p0.idle_test_period" value="300" />
		</properties>
	</persistence-unit>
</persistence>